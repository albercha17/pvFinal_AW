<!DOCTYPE html>
<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="/css/estilo.css" rel="stylesheet" type="text/css" media="print">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>404-Usuarios</title>
  <link rel="shortcut icon"  type="image/png" href="/Images/icono.png"/>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/usuariosRegistrados.css">
</head>


  <!-- ------------------------------------------   HEADER  ------------------------------------------------------------------------------------------- -->

  
  <%- include("header") %>
   
  <!-- ------------------------------------------------------------------------------------------------------------------------------------- -->
  <!-- ------------------------------------------------------------------------------------------------------------------------------------- -->
  <body id="body";>
  <br>
  <h1 class="text-center">Todos los usuarios</h1>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col col-5">
        <h2 ><%= usuarios.length%> usuarios registrados</h2>
      </div>
      <div class="col col-6">
        <form class="d-flex" method="get" action="/BuscarUsuario">
          <input class="form-control me-2" type="search" placeholder="Buscar por nombre o correo"
              aria-label="Search" name="filtro" id="filtro">
              <button class="btn btn-outline-light" type="submit"> Buscar</button>
      </form>
      </div>
      <% usuarios.forEach(function(usuario) { %>
      <div class="col col-4">
        <div class="card" id="cartaUsers">
          <div class="card-body">
            <div class="container">
              <div class="row">
                <div class="col col-3">
                  <img src="/imagen/<%= usuario.email%>" id="iconoHeader" width="80" height="80" id="fotos">
                </div>
                <div class="col col-1"></div>
                <div class="col col-8">
                  <h5 class="card-title" href="#" ><%= usuario.nombre%></h5>
                  <a class="card-subtitle mb-2 text-muted" href="http://localhost:3000/usuario/<%= usuario.email%>" id="email"><%= usuario.email%></a>
                  <h6 class="card-subtitle mb-2 text-muted" id="reputacion">Reputacion: <%= usuario.reputacion%></h6>
                </div>
              </div>
              <br>
              <div class="row" id="tarjeE">
              <div class="card" id="cartaE">
                <% if(usuario.tag!=null){ %>
                  <p class="card-text" id="etiqueta">Etiqueta más utilizada: </p>
                  <h6 class="card-text"
                  style="margin-bottom: 10px; font-size:large;"><%= usuario.tag%></h6>
                                                          
                          <% } ; %>
                    <% if(usuario.tag==null){ %>
                      <p class="card-text" id="etiqueta">Etiqueta más utilizada: </p>
                      <h6 class="card-text"id="noE"> no tiene preguntas </h6>             
                                    <% } ; %>
                
              </div>
                  
               
                </div>
                
               
              
            </div>

          </div>
        </div>
        <br>
      </div>
      <% }); %>

    </div>

  </div>
  </div>
  </div>



  <br><br><br>



</body>

</html>