  <body style="background-image: url(/Images/fondo1.jpg);  background-position: center center;
background-repeat: no-repeat;
background-attachment: fixed;
background-size: cover;
height: 100%;";>
  <br>
  <h1 class="text-center">Todos los usuarios</h1>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col col-5">
        <h2 ><%= usuarios.length%> usuarios registrados</h2>
      </div>
      <div class="col col-6">
        <form class="d-flex" method="get" action="/BuscarUsuario">
          <input class="form-control me-2" type="search" placeholder="Buscar por nombre o correo"
              aria-label="Search" name="filtro" style="border-width: 1px; border-color: black;">
              <button class="btn btn-outline-light" type="submit"> Buscar</button>
      </form>
      </div>
      <% usuarios.forEach(function(usuario) { %>
      <div class="col col-4">
        <div class="card" style="border-width: 1px; border-color: black; font-size:large;">
          <div class="card-body">
            <div class="container">
              <div class="row">
                <div class="col col-3">
                  <img src="/Images/amy.png" id="iconoHeader" width="80" height="80" style="border-radius: 50%;">
                </div>
                <div class="col col-1"></div>
                <div class="col col-8">
                  <h5 class="card-title" href="#" ><%= usuario.nombre%></h5>
                  <a class="card-subtitle mb-2 text-muted" href="http://localhost:3000/usuario/<%= usuario.email%>"
                    style="text-decoration:none;"><%= usuario.email%></a>
                  <h6 class="card-subtitle mb-2 text-muted" style="margin-top: 10px;">Reputacion: <%= usuario.reputacion%></h6>
                </div>
              </div>
              <br>
              <div class="row" style=" text-align: center; color: rgb(133, 31, 18);;
              margin-left: 60px; margin-right: 60px;">
              <div class="card" style="border-width: 1px; border-color: black; background-color: rgb(242, 248, 250) ;font-size:large;">
                <% if(usuario.tag!=null){ %>
                  <p class="card-text" style="font-size:medium;"
                  >Etiqueta m√°s utilizada: </p>
                  <h6 class="card-text"
                  style="margin-bottom: 10px; font-size:large;"><%= usuario.tag%></h6>
                                                          
                          <% } ; %>
                    <% if(usuario.tag==null){ %>
                      <p class="card-text" style="font-size:medium; margin-top: 10px; margin-bottom: 10px;"
                      >Este usuario no tiene ninguna pregunta </p>
                                                                    
                                    <% } ; %>
                
              </div>
                  
               
                </div>
                
               
              
            </div>

          </div>
        </div>
        <br>
      </div>
      <% }); %>

    </div>

  </div>
  </div>
  </div>



