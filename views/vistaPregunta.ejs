                                            </form>                                            <% } ; %>
                                        
                                        <% if(votadoR!=null){ %>
                                            <form method="get" action=""
                                                style="float: right;">
                                                <input type="hidden" name="puntos" value=1>
                                                <button type="submit"
                                                    style="border: 0ch;background-color:rgb(252, 252, 252);">
                                                    <i class="bi bi-hand-thumbs-up-fill"
