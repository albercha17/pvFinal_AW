                                                <input type="hidden" name="email" value= <%= respuesta.autor%>>
                                                <button type="submit"
                                                    id="botonLike">
                                                    <i class="bi bi-hand-thumbs-down"
                                                        id="emoteDislike"></i></button>
                                            </form>
                                            <form method="post" action="/PuntuarRespuesta/<%= respuesta.idPregunta%>" id="formDislike">
                                                <input type="hidden" name="puntos" value=1>
                                                <input type="hidden" name="id" value= <%= respuesta.id%>>
                                                <input type="hidden" name="email" value= <%= respuesta.autor%>>
                                                <button type="submit"
                                                    id="botonLike">
                                                    <i class="bi bi-hand-thumbs-up"
                                                        id="emoteLike"></i></button>
                                            </form>
                                             <% } ; %>

                                             <% if(respuesta.votado=="1"){ %>
                                                <form method="post" action="/PuntuarRespuesta/<%= respuesta.idPregunta%>"id="formDislike">
                                                    <input type="hidden" name="puntos" value=-1>
                                                    <input type="hidden" name="id" value= <%= respuesta.id%>>
                                                    <input type="hidden" name="email" value= <%= respuesta.autor%>>
                                                    <button type="submit"
                                                        id="botonLike">
                                                        <i class="bi bi-hand-thumbs-down"
                                                            id="emoteDislike"></i></button>
                                                </form>
                                                <form method="post" action="" id="formDislike">
                                                    <button type="submit"
                                                        id="botonLike">
                                                        <i class="bi bi-hand-thumbs-up-fill"
                                                            id="emoteLike"></i></button>
                                                </form>
                                                 <% } ; %>

                                                 <% if(respuesta.votado=="-1"){ %>
                                                    <form method="post" action=""id="formDislike">
                                                        <button type="submit"
                                                            id="botonLike">
                                                            <i class="bi bi-hand-thumbs-down-fill"
                                                                id="emoteDislike"></i></button>
                                                    </form>
                                                    <form method="post" action="/PuntuarRespuesta/<%= respuesta.idPregunta%>" id="formDislike">
                                                        <input type="hidden" name="puntos" value=1>
                                                        <input type="hidden" name="id" value= <%= respuesta.id%>>
                                                        <input type="hidden" name="email" value= <%= respuesta.autor%>>
                                                        <button type="submit"
                                                            id="botonLike">
                                                            <i class="bi bi-hand-thumbs-up"
                                                                id="emoteLike"></i></button>
                                                    </form>
                                                     <% } ; %>
