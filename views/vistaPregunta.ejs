                <!-- Cuerpo de la pregunta-->
                <div class="card" id="cartaP">
                    <div class="card-body">
                        <div class="row" id="cuerpoR">
                            <h3>Descripci√≥n</h3>
                            <p><%= respuesta.texto%></p>

                        </div>
                        <br>
                        <div class="row" style="text-align: left;">
