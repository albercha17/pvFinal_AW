<!DOCTYPE html>
<html>

<head>
    <title>404-Inicio</title>
    <link href="../public/css/estilo.css" rel="stylesheet" type="text/css" media="print">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/estiloPreguntas.css">
    <link rel="stylesheet" href="/css/global.css">

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon"  type="image/png" href="/Images/icono.png"/>
</head>



    <!-- ------------------------------------------   HEADER  ------------------------------------------------------------------------------------------- -->

    <div id="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <img src="/Images/logo.png"  width="150px">
                <a class="navbar-brand" href="http://localhost:3000/">Inicio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:3000/SinResponder"
                                > Preguntas sin
                                responder</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="http://localhost:3000/usuarios"
                                >Usuarios</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav  mb-4 mb-lg-0">
                        <div class="container">
                            <div class="row">
                                <div class="col col-3">
                                    <img src="/Images/nico.png" id="iconoHeader" width="70" height="66">
                                </div>
                                <div class="col col-3">
                                    <a class="nav-link active" aria-current="page" id="nombreUsuario"
                                        href="http://localhost:3000/usuario/<%= email%>"><%= nombre%></a>
                                </div>
                                <div class="col col-6">
                                    <form method="get" action="/desconectarse">
                                        <button class="btn btn-danger" type="submit" id="btn_cerrarSesion">Cerrar Sesion</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- ------------------------------------------------------------------------------------------------------------------------------------- -->
    <!-- ------------------------------------------------------------------------------------------------------------------------------------- -->
    <body id="body">
    <br>
    <h1 class="text-center">Todas las preguntas</h1>
    <br>
    <br>
    <% if(filtroE!=null){ %>
        <h3 class="text-center">Filtrado por etiqueta: <%= filtroE%> </h3>
        <br>
    <% } ; %>
    <% if(filtroC!=null){ %>
        <h3 class="text-center">Filtrado por cuerpo o título: <%= filtroC%> </h3>
        <br>
    <% } ; %>
    <div class="container">
        <!---------------------------------- BARRAS DE BUSQUEDA--------------------------------------->
        <div class="row">
            <div class="col col-md-8">
                <div class="container">
                    <div class="row">
                        <div class="col col-md-3">
                            <h2><%= preguntas.length%> preguntas</h2>
                        </div>
                        <div class="col col-md-3">
                            
                            <form method="get" action="/inicio">
                                <button class="btn btn-warning" type="submit"><i
                                        class="bi bi-hand-thumbs-up-fill"></i> Más votados</button>
                            </form>
                        </div>
                        <div class="col col-md-3">
                            <form method="get" action="/filtrarVisitas">
                                <button class="btn btn-warning" type="submit"><i
                                        class="bi bi-eye-fill"></i> Más visitados</button>
                            </form>
                        </div>
                        <div class="col col-md-3">
                            <form method="get" action="/filtrarFecha">
                                <button class="btn btn-warning" type="submit"><i
                                        class="bi bi-receipt-cutoff"></i> Más recientes</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% preguntas.forEach(function(pregunta) { %>
                <div class="row">
                    <div class="card" id="cartaPreguntas">
                        <div class="card-body">
                            <div class="pregunta">
                                <a class="card-title" id="tituloPregunta"href="http://localhost:3000/pregunta/<%= pregunta.id%>"><strong><%= pregunta.titulo%></strong></a>
                                <p></p>

                                <img src="/Images/amy.png" id="iconoUser" width="30" height="30">

                                <a class="card-subtitle mb-2 text-muted"
                                id="autor"
                                    href="http://localhost:3000/usuario/<%= pregunta.autor%>"><%= pregunta.autor%></a>
                                <p></p>
                                <p class="card-text"><%= pregunta.cuerpo%></p>
                                <div class="row" >
                                    <div class="col col-8">
                                        <h6>Etiquetas</h6>
                                <% pregunta.tag.forEach(function(tag) { %>
                                <a class="card-text" id="etiquetas"><%= tag.tag%></a>
                                <% }); %>
                                    </div>
                                    <div class="col col-md-4" id="p_v">
                                        <div class="row" >
                                            <p id="visitas">Visitas: <%= pregunta.visitas%></p>
                                            <p id="votos">Votos: <%= pregunta.puntos%></p>
                                        <p id="fechaP"><%= pregunta.fecha%></p>
                                        </div>
                                        
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <% }); %>
            </div>
            <div class="col col-md-4 " id="busqueda" >
                <br><br>
                    <form class=" d-flex"method="get" action="/BuscarTexto">
                <input class="form-control me-2" type="search" placeholder="Buscar por titulo o cuerpo"
                    aria-label="Search" name="tag" id="barraBusqueda">
                <button class="btn btn-outline-light" type="submit"> <i class="bi bi-search"></i></button>
                </form>
                <br>
                <form class="d-flex" method="get" action="/BuscarEtiqueta">
                    <input class="form-control me-2" id="barraBusqueda" type="search" placeholder="Buscar por etiqueta" aria-label="Search"
                        name="tag">
                    <button class="btn btn-outline-light" type="submit"> <i class="bi bi-search"></i></button>
                </form>
                <br>
                <form method="get" action="/FormularPregunta">
                    <button class="btn btn-primary" type="submit" id="CrearPregunta">Crear pregunta</button>
                </form>
            </div>
        </div>


        <br><br><br>

</body>

</html>