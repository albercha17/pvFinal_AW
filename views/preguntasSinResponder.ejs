    <body style="background-image: url(/Images/fondo1.jpg);    background-position: center center;
background-repeat: no-repeat;
background-attachment: fixed;
background-size: cover;
height: 100%;";>
    <br>
    <h1 class="text-center">Preguntas sin responder</h1>
    <br>
    <br>
    <% if(filtroE!=null){ %>
      <h3 class="text-center">Filtrado por etiqueta: <%= filtroE%> </h3>
      <br>
  <% } ; %>
  <% if(filtroC!=null){ %>
      <h3 class="text-center">Filtrado por cuerpo o título: <%= filtroC%> </h3>
      <br>
  <% } ; %>
    <div class="container">
        <!---------------------------------- BARRAS DE BUSQUEDA--------------------------------------->
        <div class="row">
            <div class="col col-md-8">
                <div class="container">
                    <div class="row">
                        <div class="col col-md-3">
                            <h2><%= preguntas.length%> preguntas</h2>
                        </div>
                        <div class="col col-md-3">
                            <form method="get" action="/SinResponder">
                                <button class="btn btn-warning" type="submit" style="margin-left: 30px;border-width: 1px; border-color: black;"><i
                                        class="bi bi-hand-thumbs-up-fill"></i> Más votados</button>
                            </form>
                        </div>
                        <div class="col col-md-3">
                            <form method="get" action="/filtrarVisitasSR">
                                <button class="btn btn-warning" type="submit" style="margin-left: 30px;border-width: 1px; border-color: black;"><i
                                        class="bi bi-eye-fill"></i> Más visitados</button>
                            </form>
                        </div>
                        <div class="col col-md-3">
                            <form method="get" action="/filtrarFechaSR">
                                <button class="btn btn-warning" type="submit" style="margin-left: 30px;border-width: 1px; border-color: black;"><i
                                        class="bi bi-receipt-cutoff"></i> Más recientes</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% preguntas.forEach(function(pregunta) { %>
                <div class="row">
                    <div class="card" style="width: 80rem;border-width: 1px; border-color: black;">
                        <div class="card-body">
                            <div class="pregunta">
                                <a class="card-title" style="text-decoration:none;color:rgb(0, 0, 0);font-size:x-large;"
                                    href="http://localhost:3000/pregunta/<%= pregunta.id%>"><strong><%= pregunta.titulo%></strong></a>
                                <p></p>

                                <img src="/Images/amy.png" id="iconoHeader" width="30" height="30"
                                    style="border-radius: 50%;">

                                <a class="card-subtitle mb-2 text-muted"
                                    href="http://localhost:3000/usuario/<%= pregunta.autor%>"
                                    style="text-decoration:none;color:rgb(67, 68, 70)"><%= pregunta.autor%></a>
                                <p></p>
                                <p class="card-text"><%= pregunta.cuerpo%></p>
                                <div class="row" >
                                  <div class="col col-8">
                                      <h6>Etiquetas</h6>
                              <% pregunta.tag.forEach(function(tag) { %>
                              <a class="card-text"
                                  style="color: rgb(190, 117, 20);text-decoration:none; margin-right: 20px; font-size: x-large;"><%= tag.tag%></a>
                              <% }); %>
                                  </div>
                                  <div class="col col-md-4" style="text-align: right;">
                                      <div class="row" >
                                          <p style="margin-right: 40px; color: rgb(111, 0, 255);">Visitas:
                                              <%= pregunta.visitas%></p>
                                          <p style="color: rgb(5, 102, 5);">Votos: <%= pregunta.puntos%></p>
                                      <p style=" margin-right: 40px; color: rgb(158, 158, 158);"><%= pregunta.fecha%></p>
                                      </div>
                                      
                                  </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <% }); %>
            </div>
            <div class="col col-md-4 " style="text-align: left;"">
                <br><br>
                    <form class=" d-flex"method="get" action="/BuscarTextoSR">
                <input class="form-control me-2" type="search" placeholder="Buscar por titulo o cuerpo"
                    aria-label="Search" name="tag" style="border-width: 1px; border-color: black;">
                <button class="btn btn-outline-light" type="submit"> <i class="bi bi-search"></i></button>
                </form>
                <br>
                <form class="d-flex" method="get" action="/BuscarEtiquetaSR">
                    <input class="form-control me-2" type="search" placeholder="Buscar por etiqueta" aria-label="Search"
                        name="tag" style="border-width: 1px; border-color: black;">
                    <button class="btn btn-outline-light" type="submit"> <i class="bi bi-search"></i></button>
                </form>
                <br>
                <form method="get" action="/FormularPregunta">
                    <button class="btn btn-primary" type="submit" style="border-width: 1px; border-color: black;">Crear pregunta</button>
                </form>
            </div>
        </div>

        <!---------------------------------- PREGUNTAS  --------------------------------------->


        <br><br><br>

</body>

</html>